<%- include('templates/header', { title: 'Contact - iamJarod' }) %>
  <link rel="stylesheet" href="css/contact.css">
  <main>
    <section class="contact-hero">
      <div class="hero-content">
        <h1 class="hero-title">Let's Connect!</h1>
        <p class="hero-description">
          Get in touch! I'd love to hear from you. Feel free to reach out via email
          or connect with me on social media to follow along with my data analysis journey.
        </p>
      </div>
    </section>

    <section class="contact-methods">
      <div class="contact-container">
        <!-- Email Card -->
        <div class="contact-card card-email">
          <div class="card-icon">
            <i class="fas fa-envelope"></i>
          </div>
          <h3 class="card-title">jarod.foster@outlook.com</h3>
          <p class="card-subtitle">Send me an email</p>
          <a href="mailto:youremail@gmail.com" class="card-link">Email Me</a>
        </div>

        <!-- LinkedIn Card -->
        <div class="contact-card card-linkedin">
          <div class="card-icon">
            <i class="fab fa-linkedin"></i>
          </div>
          <h3 class="card-title">/jarod-foster</h3>
          <p class="card-subtitle">Connect with me on LinkedIn</p>
          <a href="https://www.linkedin.com/in/jarod-foster-32410526b/" target="_blank" class="card-link">View Profile</a>
        </div>

        <!-- Twitter Card -->
        <div class="contact-card card-twitter">
          <div class="card-icon">
            <i class="fab fa-twitter"></i>
          </div>
          <h3 class="card-title">@yourhandle</h3>
          <p class="card-subtitle">Follow me on Twitter</p>
          <a href="https://twitter.com/yourhandle" target="_blank" class="card-link">Follow Me</a>
        </div>

        <!-- GitHub Card -->
        <div class="contact-card card-github">
          <div class="card-icon">
            <i class="fab fa-github"></i>
          </div>
          <h3 class="card-title">@Foster-J</h3>
          <p class="card-subtitle">Check out my code on GitHub</p>
          <a href="https://github.com/Foster-J" target="_blank" class="card-link">View Projects</a>
        </div>
      </div>
    </section>
  </main>
